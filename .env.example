# Supabase (Frankfurt/eu-central-1)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DB_URL=postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres

# AWS SES (EU-Frankfurt)
AWS_SES_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your-aws-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret
SES_FROM="Kundenmagnetapp <no-reply@kundenmagnet-app.de>"
SES_REPLY_TO=support@kundenmagnet-app.de
SES_CONFIGURATION_SET=km-default

# Security
IP_HASH_PEPPER=generate-a-secure-random-string-minimum-32-chars

# Stripe
STRIPE_SECRET_KEY=sk_test_or_live_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_or_live_key

# Application
APP_BASE_URL=https://kundenmagnet-app.de

# QR Code defaults (optional)
QR_DEFAULT_COLOR=#000000
QR_DEFAULT_SIZE=1024