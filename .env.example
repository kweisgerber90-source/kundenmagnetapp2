# .env.example
# ============================================
# KUNDENMAGNETAPP ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env.local and fill in your values
# cp .env.example .env.local

# --------------------------------------------
# App Configuration
# --------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_BASE_URL=http://localhost:3000

# --------------------------------------------
# Supabase (Required for Step 2)
# --------------------------------------------
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_DB_URL=

# --------------------------------------------
# AWS SES Email (Required for Step 2)
# --------------------------------------------
# Region must be eu-central-1 (Frankfurt) for GDPR compliance
AWS_SES_REGION=eu-central-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SES_FROM_EMAIL=no-reply@kundenmagnet-app.de
SES_REPLY_TO_EMAIL=support@kundenmagnet-app.de
SES_CONFIGURATION_SET=

# --------------------------------------------
# Security (Required for Step 2)
# --------------------------------------------
# Generate with: openssl rand -base64 32
IP_HASH_PEPPER=
JWT_SECRET=

# --------------------------------------------
# Stripe Payments (Required for Step 4)
# --------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# --------------------------------------------
# QR Code Configuration
# --------------------------------------------
QR_DEFAULT_COLOR=#000000
QR_DEFAULT_SIZE=1024

# --------------------------------------------
# Rate Limiting
# --------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# --------------------------------------------
# Development Only
# --------------------------------------------
# Set to true to bypass certain checks in development
SKIP_ENV_VALIDATION=false